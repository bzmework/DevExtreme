@(Html.DevExtreme().PolarChart()
    .ID("chart")
    .DataSource(new[] {
        new { arg = 0, val = 0.0 },
        new { arg = 30, val = 1.7 },
        new { arg = 45, val = 0.0 },
        new { arg = 60, val = 1.7 },
        new { arg = 90, val = 0.0 },
        new { arg = 120, val = 1.7 },
        new { arg = 135, val = 0.0 },
        new { arg = 150, val = 1.7 },
        new { arg = 180, val = 0.0 },
        new { arg = 210, val = 1.7 },
        new { arg = 225, val = 0.0 },
        new { arg = 240, val = 1.7 },
        new { arg = 270, val = 0.0 },
        new { arg = 300, val = 1.7 },
        new { arg = 315, val = 0.0 },
        new { arg = 330, val = 1.7 },
        new { arg = 360, val = 0.0 }
    })
    .Series(s => s.Add().Type(PolarChartSeriesType.Line))
    .Legend(l => l.Visible(false))
    .ArgumentAxis(a => a
        .Inverted(true)
        .StartAngle(90)
        .TickInterval(30))
    .Export(e => e.Enabled(true))
    .Title("Rose in Polar Coordinates")
)
