@(Html.DevExtreme().DataGrid()
    .ID("gridContainer")
    .ShowBorders(true)
    .CustomizeColumns(@<text>
        function(columns) {
            columns[0].width = 70;
            columns[4].dataType = "date";
        }
    </text>)
    .LoadPanel(loadPanel => loadPanel.Enabled(false))
    .Scrolling(scrolling => scrolling.Mode(GridScrollingMode.Infinite))
    .RemoteOperations(true)
    .Sorting(sorting => sorting.Mode(GridSortingMode.None))
    .DataSource(d => d.Mvc().Controller("DataGridScrolling").LoadAction("Get").Key("Id"))
)
